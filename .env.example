# AI Service Configuration
# Copy this file to .env and fill in the values

# Port for the AI service (default: 8089)
PORT=8089

# Product Catalogue Service URL
PRODUCT_CATALOGUE_SERVICE_URL=http://localhost:8082

# Gemini API Configuration (for LLM integration - optional)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash

# Enable/disable Gemini integration (set to "true" to enable)
USE_GEMINI=false
